{
    "name": "viness",
    "private": false,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --no-cache --continue",
        "test": "turbo run test",
        "lint": "turbo run format-and-lint",
        "format": "turbo run format-and-lint:fix",
        "format-and-lint": "biome check .",
        "format-and-lint:fix": "biome check . --write",
        "clean": "turbo run clean && rm -rf node_modules",
        "changeset": "changeset",
        "version": "changeset version",
        "release": "turbo run build && changeset publish --registry=https://registry.npmjs.org/",
        "docs:dev": "turbo run docs:dev",
        "docs:build": "turbo run docs:build",
        "docs:preview": "turbo run docs:preview"
    },
    "devDependencies": {
        "@vines/config": "workspace:*",
        "@changesets/cli": "catalog:",
        "@biomejs/biome": "catalog:",
        "turbo": "catalog:"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
