{
    "name": "@viness/store",
    "version": "1.8.0",
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "sideEffects": false,
    "license": "MIT",
    "files": ["dist/**"],

    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts",
        "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "test": "vitest",
        "coverage": "vitest run --coverage"
    },

    "dependencies": {
        "immer": "catalog:",
        "radash": "catalog:",
        "react-tracked": "catalog:",
        "zustand": "catalog:"
    },
    "devDependencies": {
        "@viness/config": "workspace:*",
        "@types/node": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "vitest": "catalog:",
        "@testing-library/react": "catalog:"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
