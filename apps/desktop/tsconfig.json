{
  "extends": "@viness/config/web.json",
  "compilerOptions": {

    /* Bundler mode */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "noEmit": true,

    /* Linting */

    /* Others */
    "paths": {
      "@/*": ["./src/*"],
      "@viness/ui/*": ["../../packages/ui/src/*"]
    },
    "baseUrl": ".",
  },
  "include": ["src", "../../packages/ui/src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "files": ["./src/missing-types.d.ts"]
}
